<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:id="@+id/layout">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/profile"
        android:src="@drawable/twitter_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginLeft="150dp"
            android:text="2525252525252525"
            android:textSize="20dp"/>

        <TextView
            android:layout_marginTop="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
            android:layout_alignParentTop="true"
            android:textSize="30sp" />



        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/textView1"
            android:src="@drawable/favourite"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/favourite_count"
            android:layout_below="@+id/textView1"
            android:layout_marginLeft="70dp"
            android:text="500"
            android:textSize="25dp"/>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_below="@+id/textView1"
            android:layout_marginLeft="160dp"
            android:src="@drawable/retweet"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/retweet_count"
            android:layout_below="@+id/textView1"
            android:text="500"
            android:textSize="25dp"
            android:layout_marginLeft="200dp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>